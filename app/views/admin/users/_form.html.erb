<%= form_for [:admin, @user], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, 'First Name', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :first_name, :class => 'form-control', :placeholder => 'First Name' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, 'Last Name', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :last_name, :class => 'form-control', :placeholder => 'Last Name' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :device_id, 'Device ID', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :device_id, :class => 'form-control', :placeholder => 'Device ID' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>