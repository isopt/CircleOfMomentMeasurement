<%= render '/admin/users/tab' %>

<h3>
  Moment Records of # <%= @user.email %> / <%= @user.fullname %>
</h3>
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <tr>
        <th>
          #
        </th>
        <th>
          Milliseconds
        </th>
        <th>
          Submitted At(GMT)
        </th>
        <th>
          Delete
        </th>
      </tr>
      <% @moment_records.each do |moment_record| %>
      <tr>
        <td><%= link_to moment_record.id, edit_admin_user_moment_record_path(@user, moment_record) %></td>
        <td><%= moment_record.milliseconds %></td>
        <td>
          <%= moment_record.submitted_at.strftime("%Y/%m/%d %H:%M:%S") %> 
        </td>

        <td>
          <%= link_to "delete", admin_user_moment_record_path(@user, moment_record), :method => :delete, :confirm => 'are you sure?' %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
  <div class="col-md-3">
    <%= render '/admin/users/aside' %>
  </div>
</div>