<%= form_for [:admin, @event_isopt], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :held_at, 'Event Date', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :held_at, :class => 'form-control', :placeholder => 'Event Date' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, 'Title', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :title, :class => 'form-control', :placeholder => 'Title' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :venue_name, 'Venue Name', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :venue_name, :class => 'form-control', :placeholder => 'Venue Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tz_offset, 'Timezone offset', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :tz_offset, :class => 'form-control', :placeholder => 'e.g.)-0500' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :consensus_time_code, 'Consensus Time Code', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_area :consensus_time_code, :class => 'form-control', :placeholder => '', :style => 'width:500px;height:400px;font-family: Courier' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>